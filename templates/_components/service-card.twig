{% from '_macros/image' import image %}
{% from '_macros/component' import component %}

<!-- Template: {{ _self }} -->
<div class="grid grid-cols-1 lg:grid-cols-2 relative group">
	<div class="px-6 lg:px-0 lg:py-10 flex flex-col col-span-1">
		<div
			class="flex p-10 lg:p-15 flex-col lg:h-full lg:rounded-l-2xl bg-opacity-80 grid grid-cols-1 lg:grid-cols-5 gap-10 lg:gap-20"
			style="background-color: {{ service.backgroundColour }}80"
		>
			<div class="col-span-full lg:col-span-2">
				{{ component('typography/h2', { heading: service.title, class: 'text-black anim-fade-up' }) }}
			</div>

			<div class="col-span-full lg:col-span-3">
				<div class="rte text-black anim-fade-up w-full">
					{{ service.text }}
				</div>

				<div class="mt-6 lg:mt-10">
					{{ component('button', { button: service.button, class: 'anim-fade-up' }) }}
				</div>
			</div>
		</div>
	</div>

	<div
		class="col-span-1 p-10 lg:px-15 lg:py-25 rounded-2xl grid grid-cols-1 lg:grid-cols-2 gap-0"
		style="background-color: {{ service.backgroundColour }}"
	>
		<div>
			{{ component('typography/h3', { heading: 'Services', class: ' anim-fade-up text-lgs !text-black' }) }}

			<ul class="mt-4 flex flex-col gap-1">
				{% for item in service.services %}
					<li class="text-lgs anim-fade-up">{{ item.service }}</li>
				{% endfor %}
			</ul>
		</div>

		<div class="self-center pt-6 lg:pt-0 lg:pl-10">
			{{ image(service.image.one(), { wrapperClass: '', class: 'anim-fade-in', lazy: true }) }}
		</div>
	</div>
</div>
